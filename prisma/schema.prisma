generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email String? @unique
  hashedPassword String?
  firstName String?
  lastName String?
  phone String?
  address String?

}

model Product {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name String
  price Float
  descriptions String[]
  
  category String
  image String
  isPopular Boolean? @default(false)


}

model Order {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  price Float
  products Json[]
  intent_id String? @unique
  userEmail String?
}
